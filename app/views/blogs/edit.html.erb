<%= form_with(model: @blog, local: true) do |form| %>
 <div class="hontai">
  <div class="p">予定を記入</div>
  <div class="katamari">
   <div class="title">
      <%= form.label :タイトル %>
      <%= form.text_field :title %>
    </div>
   
    <div class="time">
      <%= form.label :開始 %>
      <%= form.datetime_select :start_time %>
    </div>

    <div class="end_time">
      <%= form.label :終了 %>
      <%= form.datetime_select :end_time %>
    </div>
  </div>
   <div class="content">
     <%= form.label :内容 %>
     <%= form.text_field :content %>
   </div>


   <div class="submit">
     <%= form.label :予定を追加 %>
     <%= form.submit %>
   </div>
 </div>
<% end %>
