<%= form_with(model: @dairy, local: true) do |form| %>

   <h1>日記を書く</h1>
   <div class="title">
     <%= form.label :タイトル %>
     <%= form.text_field :title %>
   </div>

   <div class="date">
     <%= form.label :日付 %>
     <%= form.date_select :date %>
   </div>
  
   <div class="content">
     <%= form.label :内容 %>
     <%= form.text_field :content %>
   </div>

   <div class="field">
     <%= form.label :image %>
     <%= form.file_field :image %>
   </div>

   <div class="submit">
    <%= form.label :日記を追加 %>
    <%= form.submit %>
   </div>
<% end %>